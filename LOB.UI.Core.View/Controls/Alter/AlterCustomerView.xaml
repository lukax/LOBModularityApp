<UserControl x:Class="LOB.UI.Core.View.Controls.Alter.AlterCustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:baseSub="clr-namespace:LOB.UI.Core.View.Controls.Alter.SubEntity"
             xmlns:domain="clr-namespace:LOB.Domain;assembly=LOB.Domain"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:loc="clr-namespace:LOB.Core.Localization;assembly=LOB.Core"
             xmlns:base="clr-namespace:LOB.UI.Core.View.Controls.Alter.Base"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/LOB.UI.Core.View;component/Skins/MetroSkin.xaml" />
    </UserControl.Resources>

    <StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
            <Button DockPanel.Dock="Left" Height="18" Width="18" Command="{Binding ClearEntity}" Padding="1"
                           HorizontalAlignment="Left" ToolTip="{x:Static loc:Strings.ToolTip_Clear}" Focusable="False" >
                <Image Source="/LOB.UI.Core.Resources;component/Icons/File48.png" />
            </Button>

            <Button x:Name="ButtonCancel" Width="18" Height="18" Background="Transparent" Padding="1" 
                    Command="{Binding CancelCommand}" IsCancel="True" >
                <Image Source="/LOB.UI.Core.Resources;component/Icons/Cancel48.png" />
            </Button>
            <Button x:Name="ButtonSave" IsDefault="True" Width="18" Height="18" Background="Transparent" Padding="1"
                           Command="{Binding SaveChangesCommand}" >
                <Image Source="/LOB.UI.Core.Resources;component/Icons/Accept48.png" />
            </Button>
        </StackPanel>

        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <base:AlterBaseEntityView x:Name="UcAlterBaseEntity" />

                <Label Content="{x:Static loc:Strings.Common_Title}" HorizontalAlignment="Right" />
                <TextBlock Text="{Binding Entity.Status}" HorizontalAlignment="Left" MinWidth="200" MaxWidth="150"
                           VerticalAlignment="Center" />

                <Label Content="{x:Static loc:Strings.Common_PersonType}" HorizontalAlignment="Right" />
                <StackPanel HorizontalAlignment="Left" MinWidth="150" MaxWidth="350">
                    <StackPanel.Resources>
                        <ObjectDataProvider x:Key="DataFromEnum"
                                            MethodName="GetValues" ObjectType="{x:Type system:Enum}">
                            <ObjectDataProvider.MethodParameters>
                                <x:Type TypeName="domain:PersonType" />
                            </ObjectDataProvider.MethodParameters>
                        </ObjectDataProvider>
                    </StackPanel.Resources>
                    <ComboBox ItemsSource="{Binding Source={StaticResource DataFromEnum}}"
                              SelectedItem="{Binding Entity.PersonType}" />
                </StackPanel>

            </StackPanel>

            <StackPanel>
                <TabControl>
                    <TabItem Header="{x:Static loc:Strings.Common_PersonDetails}" x:Name="UcAlterPersonDetails">
                        <!--Load based on PersonType-->
                    </TabItem>

                </TabControl>
            </StackPanel>


            <StackPanel>
                <TabControl>
                    <TabItem Header="{x:Static loc:Strings.Tab_Hide}" />
                    <TabItem Header="{x:Static loc:Strings.Common_BoughtHistory}">
                        <DataGrid ItemsSource="{Binding Entity.BoughtHistory}" MinHeight="200"></DataGrid>
                    </TabItem>
                    <TabItem Header="{x:Static loc:Strings.Common_CustomerOf}">
                        <DataGrid ItemsSource="{Binding Entity.ClientOf}" MinHeight="200"></DataGrid>
                    </TabItem>
                </TabControl>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Height="32" Command="{Binding CancelCommand}" IsCancel="True" Padding="1">
                            <DockPanel>
                                <Image Source="/LOB.UI.Core.Resources;component/Icons/Cancel48.png" Height="26" Width="26" />
                                <Label Content="{x:Static loc:Strings.Button_Cancel}"/>
                            </DockPanel>
                        </Button>
                        <Button Height="32" Command="{Binding SaveChangesCommand}" Padding="1">
                            <DockPanel>
                                <Image Source="/LOB.UI.Core.Resources;component/Icons/Accept48.png" Height="26" Width="26" />
                                <Label Content="{x:Static loc:Strings.Button_ConfirmOp}"/>
                            </DockPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

        </StackPanel>
        
    </StackPanel>
</UserControl>