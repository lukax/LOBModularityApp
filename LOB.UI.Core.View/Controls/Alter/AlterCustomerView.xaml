<UserControl x:Class="LOB.UI.Core.View.Controls.Alter.AlterCustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:baseSub="clr-namespace:LOB.UI.Core.View.Controls.Alter.SubEntity"
             xmlns:domain="clr-namespace:LOB.Domain;assembly=LOB.Domain"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:base="clr-namespace:LOB.UI.Core.View.Controls.Alter.Base"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary Source="/Skins/MetroSkin.xaml" />
    </UserControl.Resources>

    <StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
            <controls:Tile DockPanel.Dock="Left" Height="18" Width="18" Command="{Binding ClearEntity}"
                           HorizontalAlignment="Left" ToolTip="Limpar" Focusable="False" Background="Transparent">
                <Image Source="../../Resources/File48.png"></Image>
            </controls:Tile>

            <controls:Tile x:Name="ButtonCancel" Width="18" Height="18" Background="Transparent"
                           Command="{Binding CancelCommand}" IsCancel="True" BorderThickness="0">
                <Image Source="../../Resources/Cancel48.png" />
            </controls:Tile>
            <controls:Tile x:Name="ButtonSave" IsDefault="True" Width="18" Height="18" Background="Transparent"
                           Command="{Binding SaveChangesCommand}" BorderThickness="0">
                <Image Source="../../Resources/Accept48.png" />
            </controls:Tile>
        </StackPanel>

        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <base:AlterBaseEntityView x:Name="UcAlterBaseEntity" />

                <Label Content="Status:" HorizontalAlignment="Right" />
                <TextBlock Text="{Binding Entity.Status}" HorizontalAlignment="Left" MinWidth="200" MaxWidth="150"
                           VerticalAlignment="Center" />

                <Label Content="PersonType:" HorizontalAlignment="Right" />
                <StackPanel HorizontalAlignment="Left" MinWidth="150" MaxWidth="350">
                    <StackPanel.Resources>
                        <ObjectDataProvider x:Key="DataFromEnum"
                                            MethodName="GetValues" ObjectType="{x:Type system:Enum}">
                            <ObjectDataProvider.MethodParameters>
                                <x:Type TypeName="domain:PersonType" />
                            </ObjectDataProvider.MethodParameters>
                        </ObjectDataProvider>
                    </StackPanel.Resources>
                    <ComboBox ItemsSource="{Binding Source={StaticResource DataFromEnum}}"
                              SelectedItem="{Binding Entity.PersonType}" />
                </StackPanel>

            </StackPanel>

            <StackPanel>
                <TabControl>
                    <TabItem Header="Person Details" x:Name="UcAlterPersonDetails">
                        <!--Load based on PersonType-->
                    </TabItem>

                </TabControl>
            </StackPanel>


            <StackPanel>
                <TabControl>
                    <TabItem Header=">" />
                    <TabItem Header="Bought History">
                        <DataGrid ItemsSource="{Binding Entity.BoughtHistory}" MinHeight="200"></DataGrid>
                    </TabItem>
                    <TabItem Header="CustomerOf">
                        <DataGrid ItemsSource="{Binding Entity.ClientOf}" MinHeight="200"></DataGrid>
                    </TabItem>
                </TabControl>
            </StackPanel>

        </StackPanel>
    </StackPanel>
</UserControl>