<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--ACCENT COLORS-->
    <Color x:Key="HighlightDarkColor">#505050</Color>
    <Color x:Key="HighlightLightColor">#909090</Color>

    <Color x:Key="AccentDarkColor">#404040</Color>

    <!--80%-->
    <Color x:Key="AccentColor">#303030</Color>
    <!--60%-->
    <Color x:Key="AccentColor2">#606060</Color>
    <!--40%-->
    <Color x:Key="AccentColor3">#909090</Color>
    <!--20%-->
    <Color x:Key="AccentColor4">#99999999</Color>

    <LinearGradientBrush x:Key="BrandingBrush" EndPoint="0.001,0.5" StartPoint="1.002,0.5">
        <GradientStop Color="{DynamicResource HighlightDarkColor}" Offset="0" />
        <GradientStop Color="#505050" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="AccentColorBrush"
                     Color="{StaticResource AccentColor}" />
</ResourceDictionary>